<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Side Value:"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"/>

    <include android:id="@+id/includeB4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cushion (1,2,3)"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <include android:id="@+id/includeB3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_development_value"
        android:layout_marginTop="3dp"/>

    <RelativeLayout android:id="@+id/rlLocation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:background="@color/colorBlack"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置调节："
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置1"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgRight"
            android:layout_marginRight="10dp"/>


        <ImageView android:id="@+id/imgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_right"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>

    <RelativeLayout android:id="@+id/rlMassageMode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:background="@color/colorBlack"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按摩模式："
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/tvMassageMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式1"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgRight1"
            android:layout_marginRight="10dp"/>


        <ImageView android:id="@+id/imgRight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_right"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>







</LinearLayout>
