<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Side Value:"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"/>

    // AA
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView android:id="@+id/tvInitValue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:text=""
            android:textColor="@color/colorWhite"/>

        <include android:id="@+id/includeAAL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"/>

        <include android:id="@+id/includeAAR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="gone"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:text=""
            android:textColor="@color/colorWhite"/>


    </LinearLayout>

    // BB
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <include
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="invisible"/>

        <include android:id="@+id/includeABL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"/>

        <include android:id="@+id/includeABR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

        <include
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

    </LinearLayout>

    // CDDC
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <include android:id="@+id/includeACL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"/>

        <include android:id="@+id/includeADL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"/>

        <include android:id="@+id/includeADR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

        <include android:id="@+id/includeACR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

    </LinearLayout>

    // EFFE
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <include android:id="@+id/includeAEL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"/>

        <include android:id="@+id/includeAFL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"/>

        <include android:id="@+id/includeAFR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="gone"
            android:layout_marginLeft="20dp"/>

        <include android:id="@+id/includeAER"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="gone"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    // GHHG
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <include android:id="@+id/includeAGL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"/>

        <include android:id="@+id/includeAHL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:layout_marginLeft="10dp"/>

        <include android:id="@+id/includeAHR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="gone"
            android:layout_marginLeft="20dp"/>

        <include android:id="@+id/includeAGR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/layout_a_pmcm_child"
            android:visibility="gone"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cushion (6,7,8)"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

    <include android:id="@+id/includeASeat6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_a_pmcm_child"
        android:layout_marginTop="5dp"/>

    <include android:id="@+id/includeASeat7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_a_pmcm_child"
        android:layout_marginTop="5dp"/>

    <include android:id="@+id/includeASeat8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/layout_a_pmcm_child"
        android:layout_marginTop="5dp"/>



</LinearLayout>
