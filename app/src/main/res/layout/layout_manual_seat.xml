<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack">

    <ImageView android:id="@+id/imgSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_seat_bg"/>

    // 气袋4放在了靠背两侧
    <TextView android:id="@+id/view3"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="-63"
        android:layout_marginTop="215dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="3"/>
    <TextView android:id="@+id/view3Left"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="-63"
        android:layout_marginTop="190dp"
        android:layout_marginRight="177dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="3"/>

    // 气袋5在座垫的底部侧边
    <TextView
        android:id="@+id/view4"
        android:layout_width="105dp"
        android:layout_height="20dp"
        android:layout_marginTop="321dp"
        android:layout_marginLeft="120dp"
        android:background="@color/device_red"
        android:gravity="center"
        android:rotation="-13"
        android:tag="4"
        android:textColor="@color/colorBlack" />

    <TextView android:id="@+id/view5"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="10"
        android:layout_marginTop="175dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="5"/>

    <TextView android:id="@+id/view6"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="10"
        android:layout_marginTop="215dp"
        android:layout_marginRight="110dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="6"/>

    <TextView android:id="@+id/view7"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="10"
        android:layout_marginTop="255dp"
        android:layout_marginRight="130dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="7"/>

    <TextView android:id="@+id/view0"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imgSeat"
        android:background="@color/device_red"
        android:rotation="35"
        android:rotationX="20"
        android:rotationY="-10"
        android:layout_marginTop="267dp"
        android:layout_marginRight="245dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:tag="0"/>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imgSeat"
        android:rotation="35"
        android:rotationX="20"
        android:rotationY="-10"
        android:layout_marginTop="280dp"
        android:layout_marginRight="300dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/device_red"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:tag="1"/>

        <TextView android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/device_red"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:tag="2"/>

    </LinearLayout>







</RelativeLayout>
