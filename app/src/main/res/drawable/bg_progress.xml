<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  设置背景色  -->
    <item android:id="@android:id/background">
        <shape>

            <!-- 角度 -->
            <corners
                android:radius="5dp" />
            <!-- 填充颜色 -->
            <solid
                android:color="@color/black1"/>

        </shape>

    </item>

    <!--  设置进度条颜色  -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <!-- 角度 -->
                <corners
                    android:radius="5dp" />

                <gradient
                    android:startColor="@color/colorHui"
                    android:endColor="@color/device_red"/>
            </shape>
        </clip>
    </item>
</layer-list>
